import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		String first;
		String last
		String id;
		double rate;
		double hours;
		double total;
		double tax;
		double net;
		
		System.out.println("Enter the Employee's full name: ");
		first = sc.next();
		last = sc.next();
		System.out.println("Enter the Employee's number: ");
		id = sc.next();
		System.out.println("Enter the pay rate per hour: ");
		rate = sc.nextDouble();
		System.out.println("Enter the regular hours worked: ");
		hours = sc.nextDouble();
		
		System.out.println();
		System.out.println("Thank you!");
		System.out.println();
		System.out.println("here is your paycheck!");
		System.out.println();
		System.out.println();
		System.out.println();
		System.out.println("------------------------------------------");
		System.out.println();
		
		System.out.println("Employee's name: " + first + " " + last);
		System.out.println("Employee's number: " + id);
		System.out.println("Hourly rate of pay: " + rate);
		System.out.println("Hours worked: " + hours);
		System.out.println();
		
		total = rate * hours;
		tax = total * 0.06;
		net = total - tax;
		
		System.out.println("Total Gross Pay: $" + total);
		System.out.println();
		System.out.println("Deductions");
		System.out.println("Tax (6%): $" + tax);
		System.out.println();
		System.out.println("Net Pay: $" + net + " Dollars");
		System.out.println();
		System.out.println("------------------------------------------");
		System.out.println();
		System.out.println();
		System.out.println();
		System.out.println("Bye!");
		
		
		sc.close();

	}

}
